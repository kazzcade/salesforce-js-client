{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": false,
    "moduleResolution": "node",
    "lib": [
      "es6"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
